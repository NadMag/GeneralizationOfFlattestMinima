\begin_inset CommandInset ref
LatexCommand ref
reference "assumption:pseudo-white"
plural "false"
caps "false"
noprefix "false"

\end_inset

 
\begin_inset Formula $\left\Vert XX^{T}\right\Vert _{2}=1$
\end_inset

